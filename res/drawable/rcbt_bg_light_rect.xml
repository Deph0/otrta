<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item
        android:bottom="3dp"
        android:left="3dp"
        android:right="3dp"
        android:top="3dp">
        <shape android:shape="rectangle" >
            <corners android:radius="10dp" />

            <stroke
                android:width="2.0dp"
                android:color="#FFFAFAFA" />

            <gradient
                android:angle="270"
                android:endColor="#FFF0F0F0"
                android:startColor="#FFA0A0A0"
                android:type="linear" />
        </shape>
    </item>

</layer-list>